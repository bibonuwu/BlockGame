<Window x:Class="BlockGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlockGame"
        mc:Ignorable="d"
        Title="NurAi" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontWeight="Bold">
            by NurAi
        </Label>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label HorizontalAlignment="Center" FontSize="20">
                Block Sites Games
            </Label>
            <Button Width="300" Height="50" Margin="0,0,0,10" Content="Blocking" FontSize="16" FontWeight="Bold" Background="#FF41F04B" Click="Button_Click">

            </Button>
            <Button Width="300" Height="50" Content="Unblocking" FontSize="16" FontWeight="Bold" Background="#FFFFA3A3" Click="DeleteHostsFile"/>
        </StackPanel>
       

       
    </Grid>
</Window>
